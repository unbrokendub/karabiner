{
    "title": "PrintScreen in MacOS",
    "rules": [
      {
        "description": "PrintScreen of selected area to clipboard",
        "manipulators": [
            {
                "type": "basic",
                "from": {
                  "key_code": "print_screen",
                  "modifiers": {
                    "optional": [
                      "any"
                    ]
                  }
                },

          "to": [
            {
              "key_code": "4",
              "modifiers": [
                "left_command"
              ]
            },
            {
              "key_code": "vk_none"
            }
          ]
        }
      ]
    }
  ]
}